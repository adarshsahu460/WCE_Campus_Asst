# WCE Campus Assistant Environment Configuration

# Groq Configuration (for LLM)
GROQ_API_KEY=your-groq-api-key-here

# Data Directories (DO NOT hardcode paths in code)
DATA_DIR=./data
TIMETABLE_DIR=./data/timetables
NOTICES_DIR=./data/notices
SYLLABUS_DIR=./data/syllabus
EXAMS_DIR=./data/exams
REGULATIONS_DIR=./data/regulations

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=wce_documents

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8001

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8002

# Embedding Model (HuggingFace - Groq doesn't provide embeddings)
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_PROVIDER=huggingface

# LLM Model (Groq)
LLM_MODEL=llama-3.3-70b-versatile

# RAG Configuration
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.35
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# Optional: Cohere Reranker
COHERE_API_KEY=your-cohere-api-key-here
USE_RERANKER=false
